<h1>New Menu Item:</h1>

<%= form_tag "/menu", method: :post do %>
  <input type="text" name="name" value="<%= @menu_item.name %>" placeholder="Menu Item Name">
  <input type="text" name="description" value="<%= @menu_item.description %>" placeholder="Description">
  <input type="text" name="price" value="<%= @menu_item.price %>" placeholder="Price">
  <input type="submit" value="Create Menu Item">
<% end %>